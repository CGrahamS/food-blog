{{#link-to 'entry' entry class="entry-link"}}
<div class="overlay">

  <button class="btn btn-danger delete" type="button" name="button"{{action 'delete' entry}}>X</button>
  <div class="panel panel-default entry-tile row">
    <div class="col-sm-4">
      <img src={{entry.image}} alt="" class="img-responsive pink"/>
    </div>
    <div class="col-sm-5">
      <h1>{{entry.title}}</h1>
      <h3>{{moment-from-now  entry.date}}</h3>
      <p>{{entry.previewText}}  </p>
    </div>

    {{#if admin}}

    {{/if}}
  </div>

</div>

{{/link-to}}
